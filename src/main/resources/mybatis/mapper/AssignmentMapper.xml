<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ooad.demo.mapper.AssignmentMapper">

    <cache/>

    <select id="queryAssignmentList" resultType="Assignment">
    select * from assignment
    </select>

    <select id="selectAssignmentById" resultType="Assignment">
    select * from assignment where assignment_id = #{id}
    </select>

    <insert id="addAssignment" parameterType="Assignment">
    insert into assignment
    </insert>

    <select id="selectUserDBBySid" parameterType= "int" resultType="UserDB">
    select * from user_db where sid = #{sid}
    </select>

    <insert id="addUserDB" parameterType="UserDB">
    insert into user_db(sid, user_name, user_password)
    values (#{sid}, #{user_name}, #{user_password})
    </insert>

    <update id="updateAssignment" parameterType="UserDB">
    update user set user_name=#{user_name}, user_password=#{pwd}
    where sid = #{sid}
    </update>

    <delete id="deleteUserDB" parameterType="int">
        delete from user_db
        where sid = #{sid}
    </delete>


</mapper>